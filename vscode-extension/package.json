{
  "name": "vcode-ide-extension",
  "displayName": "VCode IDE Extension",
  "description": "VS Code extension that provides enhanced coding capabilities and Monaco editor integration",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vcode.openEditor",
        "title": "Open VCode Editor",
        "category": "VCode"
      },
      {
        "command": "vcode.showWelcome",
        "title": "Show Welcome",
        "category": "VCode"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vcode.openEditor",
          "when": "true"
        },
        {
          "command": "vcode.showWelcome",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}